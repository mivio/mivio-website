doctype html
html(lang=lang)
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= video.title
    if (site.head.canonical)
      link(rel='canonical', href=site.head.canonical)
    style.
      html,body{margin:0px;padding:0px;background-color:#000;height:100%;width:100%;font-size:14px;line-height:1.42857143;overflow:hidden;}
  body
    iframe#iframe(width="100%", height="100%", src="https://www.youtube.com/embed/"+video.sourceId, frameborder="0", allowfullscreen)
    if (actionUrl)
      script.
        (function(){(new Image()).src = '#{actionUrl}';})();
